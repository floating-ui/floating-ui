{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node", "jest", "resize-observer-browser"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["packages/**/*", "playwright.config.ts", ".config/_global.d.ts"],
  "exclude": ["node_modules"]
}
