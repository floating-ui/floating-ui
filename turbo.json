{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./config/scripts/build-api.mjs"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "packages/**/src/**",
        "packages/**/utils/**",
        "packages/**/package.json",
        "packages/**/tsconfig.json",
        "packages/**/tsdown.config.ts",
        "packages/**/vite.config.ts"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "src/**",
        "utils/**",
        "test/**",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "publint": {
      "dependsOn": ["prepack"],
      "inputs": ["package.json", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "playwright": {
      "dependsOn": ["build"],
      "cache": false
    },
    "prepack": {
      "dependsOn": ["build"],
      "inputs": ["package.json", "dist/**"]
    }
  }
}
