{
  "include": ["../packages/**/src/**/*.ts", "./_global.d.ts"],
  "exclude": ["../**/*.test.ts"],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "module": "es2015",
    "removeComments": false,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "outDir": "../packages",
    "allowSyntheticDefaultImports": true,
    "strict": true
  }
}
